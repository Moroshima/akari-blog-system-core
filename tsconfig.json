{
  "include": [
    "app.ts",
    "config/**/*",
    "controllers/**/*",
    "dao/**/*",
    "models/**/*",
    "routes/**/*",
    "services/**/*",
    "utils/**/*"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@dao/*": ["dao/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
